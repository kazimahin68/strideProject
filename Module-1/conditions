//Conditions: if-else / ternary-operators / switch

const num1 = 10;
const num2 = 20;

// if(num1> num2){
//     console.log("Number 1 is greater then Number 2")
// }else if(num2> num1){
//     console.log("Number 2 is greater then Number 1")
// }else{
//     console.log("Number 1 and Number 2 is equal")
// }


switch(true){
    case num1>num2 : console.log("Number 1 is greater then Number 2")
    break;
    case num2>num1 : console.log("Number 2 is greater then Number 1");
    break;
    default: console.log("Number 1 is equal to Number 2")
}

const color = "red";

switch (color){
    case "red" : console.log("Danger");
    break;
    case "green" : console.log("Safe");
    break;
    case "yellow" : console.log("Warning");
    break;
    default: console.log("Normal")
}